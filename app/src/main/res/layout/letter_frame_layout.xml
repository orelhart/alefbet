<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/letter_frame_layout"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/letter_view_border_rounded_corners"
        >

    <com.orelhart.alefbet.LetterView
        android:id="@+id/letter_view_in_frame"
        android:padding="6dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/lettter_width"
        android:layout_height="@dimen/lettter_hight"
        android:textSize="48sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />


</FrameLayout>